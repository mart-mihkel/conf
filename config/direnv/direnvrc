#!/usr/bin/env bash

use_nvm() {
    if [[ -e ~/.nvm/nvm.sh ]]; then
        source ~/.nvm/nvm.sh
        nvm use $1
    fi
}

layout_pnpm() {
    PNPM_HOME=~/.local/share/pnpm
    if [[ -d $PNPM_HOME ]]; then
        PATH_add $PNPM_HOME
        export PNPM_HOME
    fi
}

layout_uv() {
    VIRTUAL_ENV="$(pwd)/.venv"
    if [[ -z $VIRTUAL_ENV || ! -d $VIRTUAL_ENV ]]; then
        uv venv
    fi

    PATH_add "$VIRTUAL_ENV/bin"
    export VIRTUAL_ENV
    export UV_ACTIVE=1
}
